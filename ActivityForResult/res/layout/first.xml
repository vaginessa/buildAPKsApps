<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="5dp">
	<TextView android:layout_height="wrap_content" android:text="@string/title_first"
		android:textSize="30sp" android:layout_width="wrap_content"
		android:layout_gravity="center_horizontal" />
	<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/button_choose_name"
		android:text="@string/button_choose_name_text" android:layout_gravity="center_horizontal"
		android:layout_marginTop="5dp" android:layout_marginBottom="5dp" />
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/text_display_name"
		android:text="Initial value" android:textSize="20sp"
		android:layout_gravity="center_horizontal" />
</LinearLayout>
